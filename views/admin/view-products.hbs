<section>
    <div class="conatiner">
        <div class="row mt-4 mr-3">
            <a href="/admin/addproduct" class="btn btn-success ml-auto">Add products</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>images</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.price}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px; height:50px"    src="/product-images/{{this._id}}.jpg"  alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
      </td>
    </tr>
{{/each}}
    
  </tbody>
</table>
    </div>
</section>